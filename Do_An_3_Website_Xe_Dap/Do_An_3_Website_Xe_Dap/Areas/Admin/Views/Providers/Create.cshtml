                @*@Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2">Email</label>
                <div class="col-md-10">
                    <input ng-model="provider.Email" class="form-control" type="text" />
                    @*@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input ng-click="Create()" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </form>
       
    

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

<script src="/Scripts/angular.js"></script>

<script>
    var app = angular.module('XeDap', []);
    app.controller('Provider', function ($scope, $http, $window) {
        $scope.provider = {}

        $scope.Create = Create;
        function Create() {
            console.log($scope.provider)

            $http.post("/Providers/Create", $scope.provider).then(function (result) {
                $window.location.href = '../Providers/Index';
            }, function (error) {
                alert("Thêm không thành công")
            })
        }


    });
</script>


