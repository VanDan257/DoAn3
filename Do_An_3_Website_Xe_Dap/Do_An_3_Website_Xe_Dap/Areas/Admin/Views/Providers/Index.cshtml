@model IEnumerable<DataShop.EF.Provider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int tt = 1;
}

@section header{
    Danh sách các nhà cung cấp
}

<button class="btn btn-primary" style="margin-bottom: 12px;">
    <i class="fa-solid fa-plus"></i>
    @Html.ActionLink("Create New", "Create", null, new { @class = "text-gray-100" })
</button>
<table class="table table-bordered table-striped" id="dataTable">
    <thead>
        <tr>
            <th>TT</th>
            <th>
                @Html.DisplayNameFor(model => model.PrvName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@(tt++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrvName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.PrvID }, new { @class = "text-warning fa-solid fa-pen-to-square" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.PrvID }, new { @class = " fa-solid fa-circle-info" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.PrvID }, new { @class = "text-danger fa-solid fa-trash" })
                </td>
            </tr>
        }
    </tbody>

</table>


@section scripts {
    <script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/js/demo/datatables-demo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
            type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"
            type="text/javascript"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"
            type="text/javascript"></script> 
}