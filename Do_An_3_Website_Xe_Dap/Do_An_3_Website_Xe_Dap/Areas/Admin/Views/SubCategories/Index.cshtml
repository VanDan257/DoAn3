@model IEnumerable<DataShop.EF.SubCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int tt = 1;
}

@section header{
    Danh sách danh mục con
}

<button class="btn btn-primary" style="margin-bottom: 12px;">
    <i class="fa-solid fa-plus"></i>
    @Html.ActionLink("Create New", "Create", null, new { @class = "text-gray-100" })
</button>
<table class="table table-striped table-bordered" id="dataTable">
    <thead>
        <tr>
            <th>TT</th>
            <th>
                @Html.DisplayNameFor(model => model.SubCateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.CateName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@(tt++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CateName)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.SubCateID }, new { @class = "text-warning fa-solid fa-pen-to-square" }) |
                    @Html.ActionLink(" ", "Details", new { id = item.SubCateID }, new { @class = " fa-solid fa-circle-info" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.SubCateID }, new { @class = "text-danger fa-solid fa-trash" })
                </td>
            </tr>
        }
    </tbody>

</table>

@section scripts {
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
}